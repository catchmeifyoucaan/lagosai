{
  "compilerOptions": {
    "target": "ES2020",
    "experimentalDecorators": true, // Keep if you use decorators
    "useDefineForClassFields": true, // Recommended for modern React/TS
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true, // Needed for importing JSON files
    "isolatedModules": true,
    "moduleDetection": "force", // Good for ensuring module context
    "noEmit": true,
    "allowJs": true, // Keep if you have JS files in your project
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true, // Good for strictness

    "paths": {
      "@/*" :  ["./*"] // Keep if you use path aliases, otherwise remove
    }
  }, // <--- CRUCIAL COMMA ADDED HERE
  "include": ["./src", "./components", "./types.d.ts", "./env.d.ts"] // <--- MOVED TO TOP LEVEL
}
